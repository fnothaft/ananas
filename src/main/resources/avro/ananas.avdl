@namespace("net.fnothaft.ananas.avro")

protocol Ananas {

  enum Backing {
    INT
  }

  record Kmer {
    Backing format;

    boolean isOriginal;

    union { null, int } intKmer = null;
    union { null, int } intMask = null;
  }

  record AvroKmerVertex {
    Kmer kmer;

    array<long> terminalIds = {};
    array<string> terminalNames = {};
    array<int> terminalIdx = {};

    array<long> scId = {};
    array<string> scNames = {};
    array<int> scIdx = {};
    array<long> scLink = {};

    array<long> linkId = {};
    array<int> linkIdx = {};
    array<long> linkLink = {};
  }
}